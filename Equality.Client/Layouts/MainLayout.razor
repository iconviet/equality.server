@inherits LayoutComponentBase

<MudDialogProvider />
<MudSnackbarProvider />
<MudThemeProvider Theme="_theme" />

<MudLayout Class="main">
    <MudLayout>
        <AppBarView @ref="_appBarView" />
        <MudDrawer Open="true" Class="drawer" Elevation="4">
            <MudDrawerHeader Class="header" LinkToIndex="true">
                <img height="75" src="static/img/header-logo.png" />
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Href="/" Icon="fad fa-home" Match="NavLinkMatch.All">Home</MudNavLink>
                <MudNavLink Href="/swap" Icon="fad fa-exchange" Match="NavLinkMatch.Prefix">Swap</MudNavLink>
                <MudNavLink Href="/liquidity" Icon="fad fa-water" Match="NavLinkMatch.Prefix">Liquidity</MudNavLink>
                <MudNavLink Href="/pool-list" Icon="fad fa-list-alt" Match="NavLinkMatch.Prefix">Pool List</MudNavLink>
                <MudNavLink Href="/token-list" Icon="fad fa-list-alt" Match="NavLinkMatch.Prefix">Token List</MudNavLink>
                <MudNavLink Href="/statistics" Icon="fad fa-list-alt" Match="NavLinkMatch.Prefix">Statistics</MudNavLink>
                <MudNavLink Href="/governance" Icon="fad fa-users" Match="NavLinkMatch.Prefix">Governance</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>
</MudLayout>

@code {

    private AppBarView _appBarView;

    readonly MudTheme _theme = new LightTheme();

}